[Unit]
Description=DoubleLift VOD Streamer
After=network.target

[Service]
Type=simple
User=doublelift
WorkingDirectory=/opt/doublelift
ExecStart=/usr/bin/node server/index.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=doublelift
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target

